# VidProd Environment Configuration Example
# Copy this file to .env and update with your values

# Application Settings
APP_ENV=development
LOG_LEVEL=info

# Server Settings
HOST=0.0.0.0
PORT=8000

# Upload Settings
MAX_UPLOAD_SIZE_MB=500
UPLOAD_TIMEOUT_SECONDS=300

# Storage Settings (use absolute paths in production)
TEMP_STORAGE_PATH=/data/temp
DB_PATH=/data/db/vidprod.db
CLEANUP_INTERVAL_HOURS=1
FILE_RETENTION_HOURS=24

# Worker Settings
WORKER_ENABLED=true
WORKER_CONCURRENCY=1
QUEUE_POLL_INTERVAL_SECONDS=30
JOB_TIMEOUT_SECONDS=600

# Video Processing Settings
VIDEO_SEGMENT_DURATION=60
EYE_GAZE_ENABLED=true
EYE_GAZE_INTENSITY=0.7
OUTPUT_VIDEO_FORMAT=mp4
OUTPUT_VIDEO_CODEC=h264

# Platform Upload Settings
PLATFORM_UPLOAD_ENABLED=true
UPLOAD_RETRY_COUNT=3
UPLOAD_RETRY_DELAY_SECONDS=60

# Social Media API Keys
# TikTok
TIKTOK_API_KEY=your_tiktok_api_key_here
TIKTOK_API_SECRET=your_tiktok_api_secret_here

# Instagram
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# YouTube
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# Webhook Settings
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_RETRY_COUNT=3

# Security Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Fly.io Settings (automatically set by Fly.io)
# FLY_APP_NAME=
# FLY_REGION=
# PRIMARY_REGION=iad