# Application Settings
APP_NAME=VidProd
APP_VERSION=1.0.0
DEBUG=False

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./vidprod.db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
MAX_UPLOAD_SIZE=524288000  # 500MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=mp4,avi,mov,mkv,webm

# Queue Settings
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT_SECONDS=3600

# Worker Settings
WORKER_CHECK_INTERVAL=10  # seconds
WORKER_CLEANUP_INTERVAL=300  # seconds

# Webhook Settings
WEBHOOK_TIMEOUT=30  # seconds
WEBHOOK_MAX_RETRIES=3

# External Services
VIDEO_PROCESSING_API_URL=http://localhost:8001
VIDEO_PROCESSING_API_KEY=